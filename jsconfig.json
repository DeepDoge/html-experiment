{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",

        "moduleDetection": "force",

        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noPropertyAccessFromIndexSignature": true,
        "exactOptionalPropertyTypes": true
    },
    "include": ["."]
}